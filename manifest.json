{
  "author": {
    "name": "Zendesk",
    "email": "support@zendesk.com"
  },

  "location": ["ticket_sidebar", "new_ticket_sidebar"],
  "defaultLocale": "en",
  "private": false,
  "singleInstall": false,
  "frameworkVersion": "1.0",
  "version": "1.1.0",

  "parameters": [
    {
      "name": "url",
      "type": "url",
      "required": true
    },
    {
      "name": "consumer_key",
      "type": "text",
      "required": true,
      "label": "Consumer Key"
    },
    {
      "name": "consumer_secret",
      "type": "text",
      "required": true,
      "label": "Consumer Secret Key"
    },
    {
      "name": "admin_path",
      "type": "text",
      "required": false,
      "default": "admin",
      "label": "Administration Panel Path"
    },
    {
      "name": "order_id_field_id",
      "type": "number",
      "required": false
    }
  ]
}
